@model web.Models.AppUser

@{
    ViewData["Title"] = "User Profile";
    var uId =  ViewData["CurrentUserId"];
}

<h1>Profile picture</h1><br>

<div>
    <div style="width:120px; height:120px; text-align:center;">
        @{
            string imgSrc = "";
            if(Model.profilePic != null && !Model.profilePic.Equals("")){
                imgSrc = "userFiles/" + Model.Id + "/" + Model.profilePic;
            }else{
                imgSrc = "images/avatar.webp";
            }
        }
        <img src="~/@imgSrc" style="max-width:100%; max-height:100%; height:auto; object-fit: cover;">
    </div>
    <form asp-action="SetProfilePicture" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" accept="image/*"/>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <h4>@Html.DisplayFor(model => model.UserName)</h4>
</div>
